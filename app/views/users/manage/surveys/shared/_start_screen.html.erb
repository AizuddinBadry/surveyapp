<%= form_for(:question, url: preview_users_manage_surveys_path, method: :post) do |f|%>
<%= f.hidden_field :position, value: 1%>
<%= hidden_field_tag 'current_question_position', 1 %>

<div class="columns is-multiline">
    <div class="column is-12">
        <%= @survey.welcome_message.html_safe %>
    </div>
    <div class="column is-12 has-text-centered" style="bottom:20px;position:absolute">
        <%= f.submit @survey.start_button_text, class: 'button is-primary-gradient'%>
    </div>
</div>
<% end %>