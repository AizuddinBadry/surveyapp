<% if @question.q_type == 'Textarea' %>
    <%= f.text_area :answer, cols: "30", rows: "5", class: 'textarea' %>
<% elsif @question.q_type == 'List (Radio)' %>
    <% @question.question_answers.each do |answer|%>
        <div style="border: 1px solid grey;margin-top:10px;padding:10px;">
        <%= f.radio_button :answer, answer.value %>
        <%= f.label :answer, answer.exact_value, :value => answer.value, class: 'radio' %>
        </div>
<% end %>
<% elsif @question.q_type == 'List (Dropdown)'%>
    <div class="select">
        <% options = options_from_collection_for_select(@question.question_answers, 'value', 'exact_value') %>
        <%= f.select :answer,  options, :include_blank => 'Please select an answer' %>
    </div>
<% elsif @question.q_type == 'Checkbox'%>
    <% @question.question_answers.each do |answer|%>
        <div style="border: 1px solid grey;margin-top:10px;padding:10px;">
            <label class="checkbox">
                <%= f.check_box :answer %>
                <%= answer.exact_value%>
            </label>
        </div>
    <% end %>
<% elsif @question.q_type == 'Checkbox With Comment'%>
    <% @question.question_answers.each do |answer|%>
        <div style="border: 1px solid grey;margin-top:10px;padding:10px;">
            <label class="checkbox">
                <%= f.check_box :answer %>
                <%= answer.exact_value%>
            </label>
            <%= f.text_area :comment, cols: "30", rows: "2", class: 'textarea' %>
        </div>
    <% end %>
<% elsif @question.q_type == 'Checkbox With Limit'%>
        <%= f.hidden_field :limit , value: @question.limit , id:"limit_answers" %>
    <% @question.question_answers.each do |answer|%>
        <div style="border: 1px solid grey;margin-top:10px;padding:10px;">
            
            <label class="checkbox">
                <%= f.check_box :answer , class: 'limitcheck' %>
                <%= answer.exact_value%>
            </label>
        </div>
    <% end %>
<% elsif @question.q_type == 'Level'%>
    <% @question.question_answers.each do |answer|%>
        <div style="border: 1px solid grey;margin-top:10px;padding:10px;">
        <%= f.radio_button :answer, answer.value %>
        <%= f.label :answer, answer.exact_value, :value => answer.value, class: 'radio' %>
        </div>
    <% end %>
<% elsif @question.q_type == 'Ranking'%>
   <% @question.question_answers.each do |answer|%>
        <div style="border: 1px solid grey;margin-top:10px;padding:10px;">
        <%= f.number_field :answer , min: 1 , max: @question.question_answers.size %>
        <%= answer.exact_value %>
        </div>
    <% end %>
<% elsif @question.q_type == 'Array' %>
    <div style="margin-top:10px;padding:10px;">
        <table class="table table-responsive" id="arrays">
            <tr>
                <th></th>
                <% @question.question_answers.each do |answer|%>
                    <th><%= answer.exact_value%></th>
                <% end %>
            </tr>
            <% @question.subquestions.order(position: :asc).each_with_index do |subquestion, index|%>
                <tr>
                    <td><%= subquestion.code %>. <%=subquestion.exact_value%></td>
                    <% @question.question_answers.order(position: :asc).each do |answer|%>
                        <td><%= radio_button_tag "questionaire[#{index}][answer]", answer.value %></td>
                    <% end %>
                </tr>
            <% end %>
        </table>
    </div>

<% elsif @question.q_type == 'Numerical'%>
        <%= f.number_field :answer , maxlength: 20 ,class:"input" %>
<% end %>