<section class="columns is-multiline">
<div class="column is-12">
    <div class="card">
        <div class="card-content">
            <div class="container">
                <div class="columns is-multiline">
                    <div class="column is-2">
                        <div class="field">
                            <label class="label">Title</label>
                        </div>
                    </div>
                    <div class="column is-8">
                        <div class="field">
                            <div class="control">
                                <%= f.text_field :title, placeholder: 'Survey title', class: 'input'%>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
<section class="columns">
<div class="column">
    <div class="card">
        <div class="card-header card-toggle">
            <p class="card-header-title">Introduction Screen</p>
            <a class="card-header-icon">
                <i class="fa fa-angle-down"></i>
            </a>
        </div>
        <div class="card-content toggle-content">
            <div class="content">
                    <div class="columns is-multiline">
                    <div class="column is-12">
                        <h1 class="title">Introduction Screen</h1>
                    </div>
                </div>
                <div class="columns is-multiline">
                    <div class="column is-6">
                        <div class="field">
                            <label class="label">Introduction Text</label>
                            <div class="control">
                                <%= f.text_area :welcome_message, class: 'editor'%>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Start button text</label>
                            <%= f.text_field :start_button_text, value: 'Start now', class: 'input'%>
                        </div>
                    </div>
                    <div class="column is-4">
                        <div class="field">
                            <label class="label">Show introduction screen?</label>
                            <%= f.check_box :show_intro_screen, :id => 'switch' %><label class="toggle" for="switch">Toggle</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="card">
        <div class="card-header card-toggle">
            <p class="card-header-title">Final Screen</p>
            <a class="card-header-icon">
                <i class="fa fa-angle-down"></i>
            </a>
        </div>
        <div class="card-content toggle-content">
            <div class="content">
                    <div class="columns is-multiline">
                    <div class="column is-12">
                        <h1 class="title">Final Screen</h1>
                    </div>
                </div>
                <div class="columns is-multiline">
                    <div class="column is-6">
                        <div class="field">
                            <label class="label">Final Screen Text</label>
                            <div class="control">
                                <%= f.text_area :end_message, class: 'editor'%>
                            </div>
                        </div>
                    </div>
                    <div class="column is-4">
                        <div class="field">
                            <label class="label">Show final button?</label>
                            <%= f.check_box :show_final_button, :id => 'show-final-button' %><label class="toggle" for="show-final-button"></label>
                        </div>
                        <div class="field final_enable">
                            <label class="label">Final button text</label>
                            <%= f.text_field :final_button_text, value: 'Back to start', class: 'input'%>
                        </div>
                        <div class="field final_enable">
                            <label>Final button behaviour : </label>
                            <div class="radio">
                                <input id="back-start" name="final_button_action" type="radio" value="0" checked>
                                <label for="back-start" class="radio-label">Back to start</label>
                            </div>
                            <div class="radio">
                                <input id="specific-url" name="final_button_action" value="1" type="radio">
                                <label  for="specific-url" class="radio-label">Specific URL</label>
                            </div>
                        </div>
                        <div class="field" id="url-input">
                            <%= f.text_field :final_button_url, value: nil, class: 'input'%>
                            <small>Eg : https://surveyapp.com</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>