<section class="columns is-multiline">
<div class="column is-12">
    <div class="card">
        <div class="card-content">
            <div class="container">
                <div class="columns is-multiline">
                    <div class="column is-8">
                        <div class="field">
                        <label class="label">Title</label>
                            <div class="control">
                                <%= f.text_field :title, placeholder: 'Survey title', class: 'input'%>
                            </div>
                        </div>
                        <div class="field">
                           <label class="label">Logo Survey</label>
                            <div class="control">
                                <div id="file-js-example" class="file has-name">
                                    <label class="file-label">
                                        <%= f.file_field :image, class: 'file-input'%>
                                        <span class="file-cta">
                                            <span class="file-icon">
                                                <i class="fas fa-upload"></i>
                                            </span>
                                            <span class="file-label">
                                                Choose a fileâ€¦
                                            </span>
                                        </span>
                                        <span class="file-name">
                                            No file uploaded
                                        </span>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="column is-4">
                        <div class="field">
                            <div class="control">
                              <div class="card-image has-text-right">
                                <% if @survey.image_data? %>
                                <%= image_tag @survey.image_url , style:"max-width:150px;" %>
                                <% else %>
                                <img id="blah" src="http://placehold.it/150" alt="your image" style=" max-width:150px;">
                                <% end %>
                                <br/>
                                <span class="label pr-40">Preview</span>
                            </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
<section class="columns">
<div class="column pb-20">
    <div class="card">
        <div class="card-header card-toggle">
            <p class="card-header-title">Introduction</p>
            <a class="card-header-icon">
                <i class="fa fa-angle-down"></i>
            </a>
        </div>
        <div class="card-content toggle-content">
            <div class="content">
                    <div class="columns is-multiline">
                    <div class="column is-12">
                        <h1 class="title">Introduction Screen</h1>
                    </div>
                </div>
                <div class="columns is-multiline">
                    <div class="column is-6">
                        <div class="field">
                            <label class="label">Introduction Text</label>
                            <div class="control">
                                <%= f.text_area :welcome_message, class: 'editor'%>
                            </div>
                        </div>
                        <div class="field">
                            <label class="label">Start button text</label>
                            <%= f.text_field :start_button_text, value: 'Start now', class: 'input'%>
                        </div>
                    </div>
                    <div class="column is-4">
                        <div class="field">
                            <label class="label">Show introduction screen?</label>
                            <%= f.check_box :show_intro_screen, :id => 'switch' %><label class="toggle" for="switch">Toggle</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>

<script>
    <%= render '/users/manage/surveys/shared/form.js'%>
</script>