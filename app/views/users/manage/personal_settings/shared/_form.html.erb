<section class="columns">
    <div class="column">
        <div class="card">
            <div class="card-header card-toggle">
                <p class="card-header-title">Personal Information</p>
                <a class="card-header-icon">
                    <i class="fa fa-angle-down"></i>
                </a>
            </div>
            <div class="card-content toggle-content">

                <div class="content">

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Full Name</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <%= f.text_field :name, placeholder: 'Full Name', class: 'input'%>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Email Address</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <%= f.text_field :email, placeholder: 'Email Address', class: 'input'%>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Phone Number</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <%= f.text_field :phone_number, placeholder: 'Phone Number', class: 'input'%>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label">
                            <!-- Left empty for spacing -->
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <%= f.submit 'Update', class: 'button is-primary'%>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
    </div>
</section>