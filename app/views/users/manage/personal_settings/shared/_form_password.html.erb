<section class="columns">
    <div class="column">
        <div class="card">
            <div class="card-header card-toggle">
                <p class="card-header-title">Password Information</p>
                <a class="card-header-icon">
                    <i class="fa fa-angle-down"></i>
                </a>
            </div>
            <div class="card-content toggle-content">

                <div class="content">

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Password</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <%= f.password_field :password, placeholder: 'New Password', class: 'input'%>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label is-normal">
                            <label class="label">Password Confirmation</label>
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <%= f.password_field :password_confirmation, placeholder: 'Re-New Password', class: 'input'%>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="field is-horizontal">
                        <div class="field-label">
                            <!-- Left empty for spacing -->
                        </div>
                        <div class="field-body">
                            <div class="field">
                                <div class="control">
                                    <%= f.submit 'Update', class: 'button is-primary'%>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    </div>
</section>