<div class="column is-12"> 
    <div class="card">
        <div class="card-header card-toggle">
            <p class="card-header-title">General Option</p>
            <a class="card-header-icon">
                <i class="fa fa-angle-down"></i>
            </a>
        </div>
        <div class="card-content toggle-content">
            <div class="content">
              <label class="label">Question Type : 
        <% if params[:edit].present? %>
        <div class="control">
          <div class="select"><%= f.select :q_type, [['Radio Button', 'Radio Button'], ['Select Dropdown', 'Select Dropdown'], ['Radio Button With Comment', 'Radio Button With Comment'], 
                ['5 point', '5 point'], ['Textarea', 'Textarea'], ['Checkbox', 'Checkbox'], ['Checkbox With Comment', 'Checkbox With Comment'], 
                ['Checkbox Input Text', 'Checkbox Input Text'],['Checkbox With Limit', 'Checkbox With Limit'],['Ranking', 'Ranking'], ['Level', 'Level'], ['Array', 'Array'], ['Array Numerical', 'Array Numerical']] %></div>
        </div>
        <% else %>
          <span class="tag is-primary"><%= @question.q_type%> </span>
        <% end %>
        </label>
         <label class="label">Option "Others"</label>
        <%= f.check_box :mandatory, id: 'switch', disabled: params[:edit].present? ? false : true%>
        <label class="toggle" for="switch"></label>
        <label class="label">This question is mandatory?</label>
        <%= f.check_box :mandatory, id: 'switch', disabled: params[:edit].present? ? false : true%>
        <label class="toggle" for="switch"></label>
            </div>
        </div>
    </div>
</div>